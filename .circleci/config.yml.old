version: 2.1
jobs:
  build:
    working_directory: ~/wfh
    # The primary container is an instance of the first list image listed. Your build commands run in this container.
    docker:
      - image: ubuntu:focal
    steps:
      - checkout
      - run: |
          apt-get update -qq
          apt-get install -y -qq gcc g++ libmysqlclient-dev libperl-dev libboost-dev liblua5.1-0-dev zlib1g-dev uuid-dev libssl-dev build-essential make cmake git-core unzip curl wget software-properties-common
      - run: |
          wget http://ftp.us.debian.org/debian/pool/main/libs/libsodium/libsodium18_1.0.11-2_amd64.deb
          wget http://ftp.us.debian.org/debian/pool/main/libs/libsodium/libsodium-dev_1.0.11-2_amd64.deb
          dpkg -i *.deb
          rm -f *.deb
      - run: |
          git submodule init
          git submodule update
      - run:
          name: Cmake
          command: 'cmake -G "Unix Makefiles" -DEQEMU_BUILD_TESTS=ON -DEQEMU_BUILD_LOGIN=ON'
      - run:
          name: Build Source
          command: 'make -j 2'

workflows:
  version: 2.1
  build_and_test:
    jobs:
      - build:
          filters:
            branches:
              only:
                - dev